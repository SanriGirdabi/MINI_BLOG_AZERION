<h1 class="text-center">Blog Posts</h1>

<table class="table text-center table-dark shadow shadow-lg">
  <thead>
    <tr>
      <th class="text-danger">Header</th>
      <th class="text-danger">Color</th>
      <th class="text-danger">Title</th>
      <th class="text-danger">Design</th>
      <th class="text-danger">Body</th>
      <th class="text-danger">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.header %></td>
        <td><%= post.color %></td>
        <td><%= post.title %></td>
        <td><%= post.design %></td>
        <td><%= post.body.slice(0..10) %>...</td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-success text-light' %></td>
        <%= authorized_buttons?(post) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  <%= which_button? %>
</div>
