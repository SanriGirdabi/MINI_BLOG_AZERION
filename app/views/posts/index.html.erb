<h1 class="text-center">Blog Posts</h1>

<table class="table text-center table-dark shadow shadow-lg">
  <thead>
    <tr>
      <th class="text-danger">Header</th>
      <th class="text-danger">Color</th>
      <th class="text-danger">Title</th>
      <th class="text-danger">Design</th>
      <th class="text-danger">Body</th>
      <th class="text-danger">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.header %></td>
        <td><%= post.color %></td>
        <td><%= post.title %></td>
        <td><%= post.design %></td>
        <td><%= post.body.slice(0..10) %>...</td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-success text-light' %></td>
        <% if user_signed_in? && current_user == post.user %>
          <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary text-light test' %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-light test-2' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
  
  <% if signed_in? %>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success text-light' %>
    <%= link_to 'Log Out',  destroy_user_session_url, method: :delete,  class: 'btn btn-danger text-light' %>
    <% else %>
    <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-success text-light' %>
  <% end %>
</div>
