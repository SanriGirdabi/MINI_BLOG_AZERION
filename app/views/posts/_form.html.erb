<%= form_with(model: post) do |form| %>
 <%= error_checker?(post) %>
    <div class="d-flex flex-column mx-auto col-6 card shadow shadow-lg py-3 bg-secondary text-light">
      <div class="field text-center">
        <%= form.label :header, class: 'font-weight-bold' %>
        <%= form.select :header, ['Technology', 'Art', 'Science', 'Politics'] %>
      </div>
    
      <div class="field text-center">
        <%= form.label :color, class: 'font-weight-bold' %>
        <%= form.select :color, ['blue', 'red', 'green'] %>
      </div>
    
      <div class="field text-center">
        <%= form.label :design, class: 'font-weight-bold' %>
        <%= form.select :design, ['Two column', 'One column'] %>
      </div>
    
      <div class="field form-group">
        <%= form.label :title, class: 'font-weight-bold' %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
    
    
    
      <div class="field">
        <%= form.label :body, class: 'font-weight-bold' %>
        <%= form.text_area :body, class: "form-control", rows: '15' %>
      </div>
    
      <div class="actions text-center">
        <%= form.submit class: 'btn btn-success' %>
      </div>
    </div>

<% end %>
