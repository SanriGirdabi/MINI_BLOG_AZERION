<%= form_with url: post_comment_path(@post, @comment), scope: :comment, method: :put do |form| %>
  <%= error_checker?(@comment) %>
      <div class="field">
        <%= form.hidden_field :post_id, value: @post.id %>
        <%= form.label :body, class: 'font-weight-bold' %>
        <%= form.text_area :body, class: "form-control", rows: '15' %>
      </div>
    
      <div class="actions text-center">
        <%= form.submit class: 'btn btn-success' %>
      </div>
    </div>

<% end %>
